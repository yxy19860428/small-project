@import '../../style/css.wxss';
.home{
  width: 100%;
  height: 100%;
}
.lunbotu{
  width: 100%;
  height: 300rpx;
  background: #d43c33;
}
.lunbotu image{
  width: 100%;
  height: 100%;
}
.nav{
  display: flex;
  margin: 10rpx 0;
}
.nav view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex:1;
}
.nav .iconfont{
  width: 100rpx;
  height: 100rpx;
  background:#d43c33;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  font-size: 50rpx;
  color:white;
}
.nav text{
  margin: 10rpx 0;
  font-size: 30rpx;
}

.content{
  width: 90%;
  margin: 10px;
}
.content .header{
  color:#515a6e;
  font-size: 30rpx;
}
.content .content-nav{
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  color:#17233d;
  font-size: 28rpx;
}
.content-nav .more{
  padding: 5rpx 20rpx;
  border: 1rpx solid #dcdee2;
  border-radius: 32rpx;
  text-align: center;
  height: 32rpx;
  line-height: 32rpx;
}
.content .pic-content{
  display: flex;
  margin: 20rpx 0;
}
.content .pic-content .pic-item{
  margin: 0 10rpx;
}
.content .pic-content .pic-item image{
  width: 200rpx;
  height: 200rpx;
}
.content .pic-content .pic-item text{
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}