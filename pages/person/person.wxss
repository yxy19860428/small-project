@import '/style/css.wxss';

.person-page {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg {
  width: 100%;
}

.avator {
  position: absolute;
  top: 150rpx;
  left: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avator image {
  width: 100rpx;
  height: 100rpx;
}

.avator text {
  font-size: 32rpx;
  margin-left: 10rpx;
  color: #17233d;
}

.vip-box {
  position: absolute;
  width: 100%;
  height: 300rpx;
  top: 270rpx;
}

.content {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  background: rgba(0, 0, 0, .7);
  border-radius: 20rpx;
}

.content .image {
  position: absolute;
  right: 0;
  width: 50%;
  height: 300rpx;
  z-index: -1;
}

.content .header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.content .header .left {
  color: #ffd700;

}

.content .header .left text {
  margin-left: 10rpx;
}

.content .header .right {
  background: #ffd700;
  color: #17233d;
  padding: 0 20rpx;
  border-radius: 32rpx;
  font-size: 32rpx;
}
.list{
  font-size: 0;
  position: absolute;
  top: 400rpx;
  width: 100%;
}
.list image{
  width: 100%;
  height: 30rpx;
}
.list .list-content{
  width: 100%;
  height: 1000rpx;
  background: #f5f5f5;
}