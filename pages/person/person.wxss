@import '/style/css.wxss';

.person-page {
  width: 100%;
  height: 100%;
  position: relative;
}

.bg {
  width: 100%;
}

.avator {
  position: absolute;
  top: 150rpx;
  left: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avator image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.avator text {
  font-size: 32rpx;
  margin-left: 10rpx;
  color: #17233d;
}

.vip-box {
  position: absolute;
  width: 100%;
  height: 300rpx;
  top: 270rpx;
}

.content {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  height: 100%;
  background: rgba(0, 0, 0, .7);
  border-radius: 20rpx;
}

.content .image {
  position: absolute;
  right: 0;
  width: 50%;
  height: 300rpx;
  z-index: -1;
  border-radius: 0 32rpx 32rpx 0;
}

.content .header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.content .header .left {
  color: #ffd700;

}

.content .header .left text {
  margin-left: 10rpx;
}

.content .header .right {
  background: #ffd700;
  color: #17233d;
  padding: 0 20rpx;
  border-radius: 32rpx;
  font-size: 32rpx;
}

.list {
  font-size: 0;
  position: absolute;
  top: 400rpx;
  width: 100%;
  z-index: 100;
}

.list image {
  width: 100%;
  height: 30rpx;
}

.list .list-content {
  width: 100%;
  background: #f5f5f5;
}

.list-content .list-header {
  padding: 10rpx 0;
  width: 95%;
  height: 100rpx;
  margin: 0 auto;
  background: white;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.list-content .list-header view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.list-content .list-header view .iconfont {
  font-size: 50rpx;
  color: #d43c33;
}

.list-content .list-header view text {
  font-size: 20rpx;
}

.list-content .list-body {
  width: 95%;
  height: 500rpx;
  margin: 10rpx auto;
}

.list-content .list-body .list-body-1 {
  box-sizing: border-box;
  padding:20rpx;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
  height: 280rpx;
}
.list-content .list-body .list-body-1 view {
  font-size: 28rpx;
}
.list-content .list-body .list-body-1 text {
  font-size: 50rpx;
}
.list-content .list-body .list-body-1 .lunbotu{
  display: flex;
  height: 200rpx;
  margin: 20rpx 0;
}
.lunbotu .lunbotu-view image{
  width: 200rpx;
  height: 280rpx;
  margin-right: 20rpx;
}

.list-content .list-body .list-body-2,
.list-body-3,
.list-body-4 {
  width: 100%;
  background: white;
  height: 100rpx;
  margin: 5rpx 0;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.list-content .list-body .list-body-4 {
  border-radius: 0 0 20rpx 20rpx;
}